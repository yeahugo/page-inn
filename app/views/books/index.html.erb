<h1>Books</h1>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Status</th>
          <th>Created at</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.author%></td>
              <td><%= if book.status==0 then 'in' else 'out'end%></td>
              <td><%= book.created_at %></td>
              <td>
                <%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-mini' %>
                <%= link_to 'Destroy', book_path(book), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <%= link_to 'New', new_book_path, :class => 'btn btn-primary' %>
      <div class="apple_pagination">
        <%= will_paginate @posts, :container => false %>
      </div>
      </div>
    <div class="span2">
      <br>
      <h4>Tags</h4>
      <ul class="nav nav-pills nav-stacked">
        <% @tagsArray.each do |tag|%>
        <li><a href='/books/tag/<%= tag%>'>
          <%= tag%>
        </a></li>
        <%end%>
       </ul>
    </div>

  </div>
</div>



