<div class="container-fluid">
<ul class="thumbnails">
  <% @books.each do |book| %>
      <li class="span2" style="height:120px;TEXT-ALIGN:center">
        <a  href="<%= book_path(book) %>" style="height:120px">
          <%= image_tag "books/"+book.isbn+".jpg", {:width => 60}%>
          <p><%= book.title%></p>
        </a>
      </li>
  <% end %>
</ul>

</div>